{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Wails: Production ratta",
            "type": "go",
            "request": "launch",
            "mode": "exec",
            "program": "${workspaceFolder}/build/bin/ratta",
            "preLaunchTask": "build",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Wails: Debug ratta",
            "type": "go",
            "request": "launch",
            "mode": "exec",
            "program": "${workspaceFolder}/build/bin/ratta",
            "preLaunchTask": "build debug",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Debug ratta Contractor",
            "type": "go",
            "request": "launch",
            "mode": "exec",
            "program": "${workspaceFolder}/build/bin/ratta",
            "args": [
                "init",
                "contractor"
            ],
            "preLaunchTask": "build debug",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Wails: Dev ratta",
            "type": "go",
            "request": "launch",
            "mode": "exec",
            "program": "${workspaceFolder}/build/bin/ratta",
            "preLaunchTask": "build dev",
            "cwd": "${workspaceFolder}"
        }
    ]
